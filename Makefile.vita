TARGET_LIB  = libSDL2_mixer.a
COMMON_OBJS = effect_position.o \
	effect_stereoreverse.o \
	effects_internal.o \
	load_aiff.o \
	load_voc.o \
	mixer.o \
	music.o \
	music_cmd.o \
	music_flac.o \
	music_fluidsynth.o \
	music_mad.o \
	music_mikmod.o \
	music_modplug.o \
	music_mpg123.o \
	music_nativemidi.o \
	music_ogg.o  \
	music_smpeg.o \
	music_timidity.o \
	music_wav.o \
	playmus.o \
	playwave.o \

PREFIX  = arm-vita-eabi
CC      = $(PREFIX)-gcc
AR      = $(PREFIX)-ar
CFLAGS  = -Wl,-q -Wall -O3 -I$(VITASDK)/arm-vita-eabi/include/SDL2 -DMUSIC_OGG -DMUSIC_MOD_MIKMOD -DMUSIC_WAV -DMUSIC_MP3_MPG123 -DMUSIC_FLAC
ASFLAGS = $(CFLAGS)

LIBS    += -lSDL2

$(TARGET_LIB): $(COMMON_OBJS)
	$(AR) rcs $@ $^

clean:
	@rm -rf $(TARGET_LIB) $(COMMON_OBJS)

install: $(TARGET_LIB)
	@cp  $(TARGET_LIB) $(VITASDK)/arm-vita-eabi/lib
	@mkdir -p "$(VITASDK)/arm-vita-eabi/include/SDL2"
	@cp SDL_mixer.h "$(VITASDK)/arm-vita-eabi/include/SDL2"
	@echo "Installed!"

